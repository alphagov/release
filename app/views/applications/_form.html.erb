<%= simple_form_for @application do |f| %>
  <%= f.input :name, label: "Name" %>
  <%= f.input :repo, label: "GitHub repository path", hint: "eg alphagov/publisher" %>
  <%= f.input :domain, label: "GitHub domain", hint: "eg github.digital.cabinet-office.gov.uk" %>
  <%= f.input :shortname, label: "Short name", hint: "for use in graphite metrics, eg whitehall",
                          input_html: { placeholder: @application.fallback_shortname, class: '' } %>
  <%= f.input :archived, label: "Archived?" %>
  <%= f.input :status_notes %>
  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
